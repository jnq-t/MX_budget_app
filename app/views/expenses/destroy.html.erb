
<h1>Delete expense</h1>

<% if @expenses.blank? %>
   <h2><div class = "text-danger">No income to delte! </div></h2>
  <% else %>
    <ul class = "list-group list-group-flush">
      <% @expenses.each do |expense| %>
        <li class = "list-group-item" >
          <%= "#{expense.name.capitalize}, #{number_to_currency(expense.amount)}, 
                #{expense.date.to_datetime.to_formatted_s(:short)}" %>
          <%= button_to "delete", 
          {:controller => :expenses, :action => 'destroy', :id => expense.id }, :method => :delete, :class=> "btn btn-small" %>
        </li> 
      <% end %>
    </ul>
<% end %>