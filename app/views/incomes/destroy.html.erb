<strong><h2>Delete income</h2></strong>

<% if @incomes.blank? %>
   <h2><div class = "text-danger">No income to delte! </div></h2>
  <% else %>
    <ul class = "list-group list-group-flush">
      <% @incomes.each do |income| %>
        <li class = "list-group-item" >
          <%= "#{income.name.capitalize}, #{number_to_currency(income.amount)}, 
                #{income.date.to_datetime.to_formatted_s(:short)}" %>
          <%= button_to "delete", 
          {:controller => :incomes, :action => 'destroy', :id => income.id }, :method => :delete, :class=> "btn btn-small" %>
        </li> 
      <% end %>
    </ul>
<% end %>